{
  "name": "gyansetu-platform",
  "version": "1.0.0",
  "description": "Gamified Environmental Education Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "build:server": "cd server && npm install --production",
    "build:client": "cd client && npm run build",
    "build:all": "npm run install-deps && npm run build:client",
    "install-deps": "cd server && npm install && cd ../client && npm install",
    "start:prod": "cd server && npm start",
    "seed": "cd server && npm run seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": ["education", "environment", "gamification", "MERN", "sustainability"],
  "author": "GyanSetu Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
